extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Shopping Item:
      input#name.form-control(type='text' placeholder='Milk, bread, etc.' name='name' value=(undefined===shoppingitem ? '' : shoppingitem.name), required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg