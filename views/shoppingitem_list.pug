extends layout

block content
  h1= title

  form#addForm(method='POST' action='/shopping/shoppingitem')
    div.form-group
      label(for='name') Item Name:
      input#name.form-control(type='text', placeholder='Gurka, RajtanTajtan, etc.', name='name' required='true')
      button#addButton(type='submit') Add

  ul#fetchedItems

  script(src="/javascripts/main.js")